<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebebeb"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:gravity="top|right">
        <ImageView
            android:id="@+id/date_close_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/close"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main"
        android:layout_below="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:hint="Date From"
                android:textSize="@dimen/dp_16"
                android:maxLength="20"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Date From"
                app:met_textColor="@color/blue"
                app:met_textColorHint="@color/blue"
                app:met_underlineColor="@color/black"
                app:met_baseColor="@color/off_white"
                app:met_primaryColor="@color/blue"
                app:met_iconPadding="0dp"
                app:met_errorColor="@color/red"
                app:met_iconRight="@drawable/location_marker"/>

        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/to_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:hint="Date To"
            android:textSize="@dimen/dp_16"
            android:maxLength="20"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Date To"
            app:met_textColor="@color/blue"
            app:met_textColorHint="@color/blue"
            app:met_underlineColor="@color/black"
            app:met_baseColor="@color/off_white"
            app:met_primaryColor="@color/blue"
            app:met_iconPadding="0dp"
            app:met_errorColor="@color/red"
            app:met_iconRight="@drawable/location_marker"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <customfonts.MyTextViewMedium
                android:id="@+id/search_car_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_50"
                android:paddingRight="@dimen/dp_50"
                android:background="@drawable/rounded_button_green"
                android:text="SEARCH"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>